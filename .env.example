# Ololon Configuration
# Copy this file to .env and customize values as needed

# ==============================================================================
# Global Settings
# ==============================================================================

# SQLite database path (default: ololon.db)
OLOLON_DATABASE=./data/ololon.db

# Model weights file path (default: model.json.gz)
OLOLON_MODEL=./data/model.json.gz

# Logging level (default: info)
RUST_LOG=info

# ==============================================================================
# Collect Command - Data Collection Settings
# ==============================================================================

# Binance WebSocket URL for real-time price data
OLOLON_WS_URL=wss://stream.binance.com:9443/ws

# Trading pair symbol (lowercase)
OLOLON_SYMBOL=btcusdt

# Window size for feature computation (number of price points)
OLOLON_WINDOW_SIZE=60

# Labeling delay in seconds (300 = 5 minutes)
OLOLON_LABEL_DELAY_SECS=300

# ==============================================================================
# Train Command - Model Training Settings
# ==============================================================================

# Number of training epochs
OLOLON_EPOCHS=100

# Batch size for training
OLOLON_BATCH_SIZE=32

# Learning rate
OLOLON_LEARNING_RATE=0.001

# Hidden size for LSTM layer
OLOLON_HIDDEN_SIZE=64

# Number of LSTM layers
OLOLON_NUM_LAYERS=2

# Validation split ratio (0.0 - 1.0)
OLOLON_VALIDATION_SPLIT=0.2

# ==============================================================================
# Trade Command - Live Trading Settings
# ==============================================================================

# Polymarket Gamma API base URL
OLOLON_GAMMA_API_URL=https://gamma-api.polymarket.com

# Polymarket CLOB API base URL
OLOLON_CLOB_API_URL=https://clob.polymarket.com

# Minimum probability edge required to place a trade
OLOLON_MIN_EDGE=0.05

# Trade size in USDC
OLOLON_TRADE_SIZE=10.0

# ==============================================================================
# Polymarket API Credentials (REQUIRED for trading)
# ==============================================================================

# Ethereum private key for L1 signing
# WARNING: Never commit your actual private key to version control!
POLY_PRIVATE_KEY=

# Polymarket L2 API key
POLY_API_KEY=

# Polymarket L2 API secret
POLY_API_SECRET=
